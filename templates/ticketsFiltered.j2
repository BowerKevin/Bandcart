<html>
    <head>
        <link rel="stylesheet" type="text/css" href="./static/css/style.css">
    </head>
    <body>
        
    <h1 class="alt-h1 text-center mb-4 mb-md-6">Filtered Tickets</h1> 
    <h6 class="alt-h6 text-center mb-4 mb-md-6">
        Scroll through the Tickets purchased for the Event you have
        selected. Return to the Home page once you are done.
    </h6>  
    
    <div id="main" class="d-flex flex-wrap flex-content-stretch gutter-md py-2">

    {% if Tickets == () %}
        <div id="emptyBands">
            <strong>Database table will display here once at least one Ticket
                is assigned to a Customer and an Event. Do so using the form above.<strong>
        </div>
    {% endif %}
    
    {% if Tickets != () %}
        <table class="tableCenter">
        <thead>
        <tr>
            <!-- Iterate through each key in the first entry to get the
            column name -->
            {% for key in Tickets[0].keys() %}
                
                {% if "ID" not in key %}
                    <!-- Create a <th> tag with the key inside of it, this will be
                    our header row -->
                    <th>{{ key }}</th>
                {% endif %}

            <!-- End of this for loop -->
            {% endfor %}
            <th>update</th>
            <th>delete</th>
        </tr>
        <tbody>

        <!-- Now, iterate through every person in bsg_people -->
        {% for x in Tickets %}
            {% if x.customerFirst != None %}
            <tr>
                <!-- Then iterate through every key in the current person dictionary -->
                {% for key in x.keys() %}

                    {% if "ID" not in key %}
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{x[key]}}</td>
                    {% endif %}

                {% endfor %}
                <td>
                <!-- <form method="PUT"><input type="submit" id="updateBand" value="update"><form> -->
                <button type="button" method="PUT">update</button>
                </td>
                <td>
                <button type="button" method="DELETE">delete</button>
                </td>
            {% endif %}
        {% endfor %}
        </table>
    {% endif %}

    <footer>
        <a href="/" class="navButton">
            Home
        </a> 
        <a href="/bands" class="navButton">
            Bands
        </a> 
        <a href="/events" class="navButton">
            Events
        </a> 
        <a href="/bandsevents" class="navButton">
            BandsEvents
        </a> 
        <a href="/customers" class="navButton">
            Customers
        </a> 
        <a href="/tickets" class="navButtonUsed">
            Tickets
        </a> 
    </footer>

    </div>
</body>
</html>